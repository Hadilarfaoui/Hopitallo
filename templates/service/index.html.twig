{% extends 'base_Admin.html.twig' %}

{% block title %}Service index{% endblock %}

{% block body %}
<div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary"  style="text-align:center">Liste des services</h6>
                        </div>
                        {% for service in app.flashes('info') %}
                        <div class="alert alert-success">
                            {{ service }}
                        </div>
                        {% endfor %}
                        <div class="card-body">
                            <div class="table-responsive">
    <div>
   <a style=" display: inline-block;
  padding: 10px 20px;
  background-color: #4e73df;
  color: white;
  margin-top:15px;
  text-decoration: none;
  border-radius: 5px;" href="{{ path('app_service_new') }}">Create new</a>
    </br>
    </br>
    </div>
<table  class="table table-bordered" id="dataTable" width="100%" cellspacing="0"> 
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom_service</th>
                 <th>Hopital</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for service in services %}
            <tr>
                <td>{{ service.id }}</td>
                <td>{{ service.nomService }}</td>
                <td>{{ service.hopital }}</td>
                <td>
                   <a style=" display: inline-block;
  padding: 10px 20px;
  background-color: #4e73df;
  color: white;
  margin-top:15px;
  text-decoration: none;
  border-radius: 5px;" href="{{ path('app_service_show', {'id': service.id}) }}">Show</a>
                    <a style=" display: inline-block;
  padding: 10px 20px;
  background-color: #4e73df;
  color: white;
  margin-top:15px;
  text-decoration: none;
  border-radius: 5px;" href="{{ path('app_service_edit', {'id': service.id}) }}">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
</div>
{% endblock %}
